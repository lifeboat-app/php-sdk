{
    "name": "lifeboat/php-sdk",
    "type": "library",
    "description": "Lifeboat PHP SDK",
    "license": "BSD-3-Clause",
    "homepage": "https://lifeboat.app/docs/api",
    "keywords": [
        "lifeboat", "sdk"
    ],
    "authors": [
        {
            "name": "Lifeboat",
            "email": "hello@lifeboat.app",
            "homepage": "https://lifeboat.app",
            "role": "Developer"
        },
        {
            "name": "Lifeboat Community",
            "homepage": "https://lifeboat.app",
            "role": "Mantainer"
        }
    ],
    "autoload": {
        "file": ["src/includes/functions.php"],
        "psr-4": {
            "Lifeboat\\": "src",
            "Lifeboat\\Exceptions\\": "src/exceptions",
            "Lifeboat\\Factory\\": "src/factory",
            "Lifeboat\\Models\\": "src/models",
            "Lifeboat\\Resource\\": "src/resource",
            "Lifeboat\\Services\\": "src/services",
            "Lifeboat\\Utils\\": "src/utils",
            "Lifeboat\\Traits\\": "src/traits",
            "Lifeboat\\Interfaces\\": "src/interfaces",
            "Lifeboat\\Tests\\": "tests",
            "Lifeboat\\Tests\\Factory\\": "tests/factory",
            "Lifeboat\\Tests\\Models\\": "tests/models",
            "Lifeboat\\Tests\\Resource\\": "tests/resource",
            "Lifeboat\\Tests\\Services\\": "tests/services"
        }
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/promises": ">=1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.*"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage phpunit"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
